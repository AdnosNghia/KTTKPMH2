@page
@model ASC.Web.Areas.Identity.Pages.Account.ExternalLoginConfirmationModel
@{
}
<div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <p class="flow-text">
                    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                    Please enter an email address for this site below and click the Register
                    button to finish
                    logging in.
                </p>
                <div class="form-group">
                    <div class="input-field col s12">
                        <input asp-for="Input.Email" type="email" class="validate">
                        <label asp-for="Input.Email">Email</label>
                        <span class="helper-text" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="center">
                    <button class="btn waves-effect waves-light" type="submit">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>